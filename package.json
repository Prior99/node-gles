{
    "name": "node-gles-prebuilt",
    "version": "0.0.18",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "gypfile": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/Prior99/node-gles"
    },
    "engines": {
        "node": ">=8.11.0"
    },
    "license": "Apache-2.0",
    "files": [
        "README.md",
        "LICENSE",
        "binding.gyp",
        "package.json",
        "dist/"
    ],
    "scripts": {
        "build-npm": "./scripts/build-npm.sh",
        "format": "clang-format -i -style=Google binding/*.cc binding/*.h",
        "install": "node scripts/install.js",
        "prebuild": "tsc -p . && node dist/scripts/download-angle.js",
        "build": "node-gyp rebuild",
        "postbuild": "node dist/scripts/zip.js",
        "lint": "eslint --max-warnings 0 \"src/**/*.ts\" \"tests/**/*.ts\"",
        "test": "jest"
    },
    "jest": {
        "testMatch": [
            "<rootDir>/tests/**/test-*.ts"
        ],
        "preset": "ts-jest"
    },
    "prettier": {
        "trailingComma": "all",
        "printWidth": 120,
        "tabWidth": 4
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint",
            "prettier"
        ],
        "settings": {
            "react": {
                "version": "detect"
            }
        },
        "rules": {
            "@typescript-eslint/no-non-null-assertion": "off",
            "@typescript-eslint/explicit-function-return-type": [
                "error",
                {
                    "allowExpressions": true
                }
            ],
            "@typescript-eslint/no-unused-vars": [
                "error",
                {
                    "argsIgnorePattern": "^_"
                }
            ]
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier/@typescript-eslint"
        ]
    },
    "devDependencies": {
        "@types/adm-zip": "^0.4.33",
        "@types/bindings": "^1.3.0",
        "@types/jest": "^26.0.4",
        "@types/node": "^14.0.20",
        "@types/node-fetch": "^2.5.7",
        "@types/progress": "^2.0.3",
        "@types/tar": "^4.0.3",
        "@types/webgl2": "^0.0.5",
        "@typescript-eslint/eslint-plugin": "^3.6.0",
        "@typescript-eslint/parser": "^3.6.0",
        "clang-format": "^1.4.0",
        "eslint": "^7.4.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-jest": "^23.18.0",
        "eslint-plugin-prettier": "^3.1.4",
        "jest": "^26.1.0",
        "prettier": "^2.0.5",
        "ts-jest": "^26.1.1",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.6"
    },
    "dependencies": {
        "adm-zip": "^0.4.16",
        "bindings": "^1.5.0",
        "https-proxy-agent": "^5.0.0",
        "node-fetch": "^2.6.0",
        "tar": "^6.0.2"
    }
}
